#include "implementation.oil"

CPU ATMEL_AT91SAM7S256
{
  OS LEJOS_OSEK
  {
    STATUS = EXTENDED;
    STARTUPHOOK = FALSE;
    ERRORHOOK = FALSE;
    SHUTDOWNHOOK = FALSE;
    PRETASKHOOK = FALSE;
    POSTTASKHOOK = FALSE;
    USEGETSERVICEID = FALSE;
    USEPARAMETERACCESS = FALSE;
    USERESSCHEDULER = FALSE;
  };

  /* Definition of application mode */
  APPMODE appmode1{}; 

  /* Definition of TASK_boot */
  TASK TASK_boot
  {
    AUTOSTART = TRUE { APPMODE = appmode1; };
    PRIORITY = 6; /* Smaller value means lower priority */ 
    ACTIVATION = 1;
    SCHEDULE = NON;
    STACKSIZE = 1024; /* Stack size */ 
  };

  TASK TASK_line_follow
  {
    AUTOSTART = FALSE;
    PRIORITY = 5; /* Smaller value means lower priority */ 
    ACTIVATION = 1;
    SCHEDULE = FULL;
    STACKSIZE = 1024; /* Stack size */ 
  };

  TASK TASK_color_scan
  {
    AUTOSTART = FALSE;
    PRIORITY = 4; /* Smaller value means lower priority */ 
    ACTIVATION = 1;
    SCHEDULE = FULL;
    STACKSIZE = 1024; /* Stack size */ 
  };

  TASK TASK_cross_intersection
  {
    AUTOSTART = FALSE;
    PRIORITY = 3; /* Smaller value means lower priority */ 
    ACTIVATION = 1;
    SCHEDULE = FULL;
    STACKSIZE = 1024; /* Stack size */ 
  };

  TASK TASK_consume_bluetooth
  {
    AUTOSTART = FALSE;
    PRIORITY = 2; /* Smaller value means lower priority */ 
    ACTIVATION = 1;
    SCHEDULE = FULL;
    STACKSIZE = 1024; /* Stack size */ 
  };

  TASK TASK_check_navigation
  {
    AUTOSTART = FALSE;
    PRIORITY = 1; /* Smaller value means lower priority */ 
    ACTIVATION = 1;
    SCHEDULE = FULL;
    STACKSIZE = 1024; /* Stack size */ 
  };


  

  COUNTER SysTimerCnt
  {
    MINCYCLE = 1;
    MAXALLOWEDVALUE = 10000;
    TICKSPERBASE = 1; /* One tick is equal to 1msec */
  };

  ALARM cyclic_alarm
  {
    COUNTER = SysTimerCnt;
    ACTION = ACTIVATETASK
    {
        TASK = TASK_line_follow;
    };
    AUTOSTART = FALSE;
  };

  ALARM cyclic_alarm_2
  {
    COUNTER = SysTimerCnt;
    ACTION = ACTIVATETASK
    {
        TASK = TASK_color_scan;
    };
    AUTOSTART = FALSE;
  };

  ALARM cyclic_alarm_3
  {
    COUNTER = SysTimerCnt;
    ACTION = ACTIVATETASK
    {
        TASK = TASK_consume_bluetooth;
    };
    AUTOSTART = TRUE
    {
      ALARMTIME = 1;
      CYCLETIME = 1000;
      APPMODE   = appmode1;
    };
  };

  ALARM cyclic_alarm_4
  {
    COUNTER = SysTimerCnt;
    ACTION = ACTIVATETASK
    {
        TASK = TASK_check_navigation;
    };
    AUTOSTART = TRUE
    {
      ALARMTIME = 1;
      CYCLETIME = 1000;
      APPMODE   = appmode1;
    };
  };

  ALARM cyclic_alarm_5
  {
    COUNTER = SysTimerCnt;
    ACTION = ACTIVATETASK
    {
        TASK = TASK_cross_intersection;
    };
    AUTOSTART = FALSE;
  };
};